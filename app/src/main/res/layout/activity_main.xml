<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculations"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textEnd"
        android:text="0"
        android:textColor="#33258C"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:textAlignment="textEnd"
        android:text="0.0"
        android:textColor="#33258C"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculations" />

    <Button
        android:id="@+id/btn_clr"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="#33258C"
        android:text="Clear"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/result" />

    <Button
        android:id="@+id/btn_backspace"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="#33258C"
        android:text="Bsckspace"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_clr"
        app:layout_constraintTop_toTopOf="@+id/result" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="7"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_clr"
        />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="8"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_clr"
        />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="9"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_8"
        app:layout_constraintTop_toBottomOf="@+id/btn_clr"
        />

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="รท"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_9"
        app:layout_constraintTop_toBottomOf="@+id/btn_clr"
        />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="4"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="5"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="6"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="*"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_6"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="2"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="3"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="-"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        />

    <Button
        android:id="@+id/btn_decimal"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="."
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_decimal"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="+"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_0"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        />

    <Button
        android:id="@+id/btn_eval"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#33258C"
        android:text="="
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="307dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_add"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>